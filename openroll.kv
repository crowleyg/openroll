<Button>
    font_size: 20
    background_normal: ''

<Label>:
    font_size: 40
    background_color: (.5, .5, .5, 1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<OpenRollLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 2

        GridLayout:
            cols: 4
            rows: 2
            padding: 10
            spacing: 2
            size_hint: (1, .33)

            BoxLayout:
                orientation: "vertical"
                size_hint: (.2, .5)
                Label:
                    text: "d4"
                    font_size: 60
                    size_hint: (1, 0.75)
                GridLayout:
                    cols: 2
                    rows: 1
                    size_hint: (1, 0.25)
                    Button:
                        text: "+"
                        background_color:(0, .75, 0, 1)
                        on_press: root.add_die("d4")
                    Button:
                        text: "-"
                        background_color:(.75, 0, 0, 1)
                        on_press: root.remove_die("d4")

            BoxLayout:
                orientation: "vertical"
                size_hint: (.2, .5)
